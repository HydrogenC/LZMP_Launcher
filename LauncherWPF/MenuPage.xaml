<Page x:Class="LauncherWPF.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage" Width="360" Height="340">

    <Grid x:Name="MainGrid" Width="360" Height="340">
        <local:MainListItem x:Name="ModCustom" Description="Customize the modset to use in the modpack. " Title="Mod Customizer" Width="300" Height="80" Margin="30,10,30,250" BorderBrush="#FF9B9B9B" Panel.ZIndex="1" Click="ModCustom_Click" />
        <local:MainListItem x:Name="SavesManager" Description="Manages the maps in your instance. " Title="Saves Manager" Width="300" Height="80" Margin="30,110,30,150" BorderBrush="#FF9B9B9B" Panel.ZIndex="2" BorderThickness="1" />
        <local:MainListItem x:Name="ComingSoon" Description="New features coming soon. " Title="Comming Soon" Width="300" Height="80" Margin="30,210,30,50" BorderBrush="#FF9B9B9B" Panel.ZIndex="1" />
    </Grid>
</Page>
    