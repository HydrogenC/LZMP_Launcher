<Page x:Class="LauncherWPF.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherWPF"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="360"
      Title="MenuPage" Width="360" Height="500">

    <Grid x:Name="MainGrid" Width="360" Height="500">
        <local:MainListItem x:Name="ModCustom" Description="Modify your modset. " Title="Mod Customizer" Width="300" Height="80" Margin="30,24,30,396" BorderBrush="#FF9B9B9B" Panel.ZIndex="1" Click="ModCustom_Click" MainImageSource="Wrench.png"/>
        <local:MainListItem x:Name="SavesManager" Description="Manages your maps. " Title="Saves Manager" Width="300" Height="80" Margin="30,124,30,296" BorderBrush="#FF9B9B9B" Panel.ZIndex="2" BorderThickness="1" MainImageSource="Config.png" />
        <local:MainListItem x:Name="ComingSoon" Description="New features coming soon. " Title="Comming Soon" Width="300" Height="80" Margin="30,224,30,196" BorderBrush="#FF9B9B9B" Panel.ZIndex="1" MainImageSource="ComingSoon.png" />
    </Grid>
</Page>
    