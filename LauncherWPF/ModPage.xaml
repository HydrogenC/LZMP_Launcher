<Page x:Class="LauncherWPF.ModPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherWPF"
      mc:Ignorable="d"
      Title="ModPage" Height="340" Width="360">

    <Grid Width="360" Height="340" Margin="0,0,0,0" VerticalAlignment="Top">
        <TreeView x:Name="MainTreeView" HorizontalAlignment="Left" Height="270" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" Background="{x:Null}">

        </TreeView>
        <Button x:Name="CheckAllButton" Content="Check All" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="105" Background="#FF1E1E1E" FontSize="18" Foreground="White" Margin="10,290,0,0"/>
        <Button x:Name="ApplyButton" Content="Apply" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Width="105" Background="#FF1E1E1E" FontSize="18" Foreground="White" Margin="0,290,0,0"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="105" Background="#FF1E1E1E" FontSize="18" Foreground="White" Margin="245,290,0,0" Click="BackButton_Click"/>
    </Grid>
</Page>
