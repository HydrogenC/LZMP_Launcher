<Page x:Class="LauncherWPF.RestartRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherWPF"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="360"
      Title="RestartRequest">

    <Grid Width="360" Height="500">
        <Label HorizontalAlignment="Left" Height="40" Margin="30,24,0,0" VerticalAlignment="Top" Width="300" Foreground="White" FontSize="14" Content="Modpack restored to uninstalled state. " />
        <Label HorizontalAlignment="Left" Height="40" Margin="30,44,0,0" VerticalAlignment="Top" Width="300" Foreground="White" FontSize="14" Content="Please restart the launcher! " />
    </Grid>
</Page>
