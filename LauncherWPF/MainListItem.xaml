<UserControl x:Class="LauncherWPF.MainListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LauncherWPF"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300"
             x:Name="ClassListItem"
             BorderBrush="#FF969696" BorderThickness="1">
    <Grid Width="300" Height="80">
            <Label x:Name="TitleLabel" Content="Null" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="196" FontSize="16" Foreground="White"/>
            <Label x:Name="DescriptionLabel" Content="Null" HorizontalAlignment="Left" Height="30" Margin="10,40,0,0" VerticalAlignment="Top" Width="280" Foreground="#FF969696" FontSize="10"/>
        </Grid>
        <UserControl.Style>
        <Style TargetType="{x:Type UserControl}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#AAFFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
</UserControl>
