<Button x:Class="LauncherWPF.MainListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LauncherWPF"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             x:Name="ClassListItem"
             BorderBrush="#FF969696" BorderThickness="1" Background="{x:Null}">
    <Grid Width="300" Height="100">
        <Label x:Name="TitleLabel" Content="Null" HorizontalAlignment="Left" Height="30" Margin="76,10,0,0" VerticalAlignment="Top" Width="214" FontSize="18" Foreground="White"/>
        <Label x:Name="DescriptionLabel" Content="Null" HorizontalAlignment="Left" Height="45" Margin="76,45,0,0" VerticalAlignment="Top" Width="214" Foreground="#FF969696"/>
        <Image x:Name="MainImage" HorizontalAlignment="Left" Height="60" Margin="10,20,0,0" VerticalAlignment="Top" Width="60" ScrollViewer.VerticalScrollBarVisibility="Disabled" Stretch="Fill"/>
    </Grid>
</Button>
