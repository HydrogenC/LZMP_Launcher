<Window x:Class="LauncherWPF.ModernUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPF"
        mc:Ignorable="d"
        Title="ModernUI" Height="720" Width="720" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Border Margin="0,0,0,0" Panel.ZIndex="-1">
            <Image x:Name="Background" Source="Images\Bg.png" Margin="0,0,0,0" Stretch="Fill"/>
            <Border.Effect>
                <BlurEffect Radius="12" KernelType="Gaussian"/>
            </Border.Effect>
        </Border>
        <Label x:Name="TitleLabel" Content="NULL" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="694" Height="56" Foreground="White" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" FontSize="40" Background="#66FFFFFF" Padding="5,0"/>
    </Grid>
</Window>
