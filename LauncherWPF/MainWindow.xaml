<Window x:Name="AppMainWindow" x:Class="LauncherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="456" Width="645" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="#FF101010" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Margin="0,0,0,0">
        <Button x:Name="CloseButton" Content="X" HorizontalAlignment="Left" Height="45" Margin="590,10,0,0" VerticalAlignment="Top" Width="45" Background="#FF101010" BorderBrush="{x:Null}" Foreground="White" Click="CloseButton_Click" FontSize="24"/>
        <Button x:Name="CleanUpButton" Content="R" HorizontalAlignment="Left" Height="45" Margin="540,10,0,0" VerticalAlignment="Top" Width="45" Background="#FF101010" BorderBrush="{x:Null}" Foreground="White" Click="CleanUpButton_Click" FontSize="24"/>
        <Label x:Name="BigTitle" Content="LZMP %v Launcher" HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" VerticalAlignment="Top" Width="530" Foreground="White" FontSize="30" VerticalContentAlignment="Center"/>
        <TreeView x:Name="MainTree" HorizontalAlignment="Left" Height="292" Margin="10,60,0,0" VerticalAlignment="Top" Width="278" Background="#FF101010"/>
        <Button x:Name="ToggleSelect" Content="Check All" HorizontalAlignment="Left" Height="45" Margin="10,401,0,0" VerticalAlignment="Top" Width="120" Background="#FF101010" Foreground="White" FontSize="18"/>
        <Button x:Name="ApplyButton" Content="Apply" HorizontalAlignment="Left" Height="45" Margin="168,401,0,0" VerticalAlignment="Top" Width="120" Background="#FF101010" Foreground="White" FontSize="18"/>
        <ProgressBar x:Name="MainProgressBar" HorizontalAlignment="Left" Height="28" Margin="10,364,0,0" VerticalAlignment="Top" Width="221"/>
        <Label x:Name="ProgressLabel" Content="15/37" HorizontalAlignment="Left" Height="28" Margin="236,364,0,0" VerticalAlignment="Top" Width="52" FontSize="14" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
